<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pediatras"
    android:background="@drawable/fondo2">

    <TextView
        android:id="@+id/labelPediatra"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/labelPediatras"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtConsultP"
        android:layout_width="251dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/txtConsultP"
        android:inputType="textPersonName"
        android:onClick="Proximo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelPediatra" />

    <ImageButton
        android:id="@+id/btnFind"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#00000000"
        android:onClick="Proximo"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtConsultP"
        app:layout_constraintTop_toBottomOf="@+id/labelPediatra"
        app:srcCompat="@drawable/search" />

    <ImageButton
        android:id="@+id/btnimgSearchP"
        android:layout_width="232dp"
        android:layout_height="217dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#00000000"
        android:contentDescription="@string/txtSearchP"
        android:onClick="PediatrasSearch"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConsultP"
        app:srcCompat="@drawable/icopediat" />

    <TextView
        android:id="@+id/labelSearchP"
        android:layout_width="146dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:text="@string/txtSearchP"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnimgSearchP"
        app:layout_constraintEnd_toEndOf="@+id/btnimgSearchP"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="@+id/btnimgSearchP"
        app:layout_constraintTop_toTopOf="@+id/btnimgSearchP"
        app:layout_constraintVertical_bias="0.918" />
</android.support.constraint.ConstraintLayout>